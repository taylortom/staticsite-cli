{
    "repos": {
        "posts": "git@github.com:taylortom/blog-posts.git",
        "site": "git@github.com:taylortom/taylortom.github.io.git"
    },
    "globals": {
        "assetsDir": "/assets"
    },
    "pages": {
        "home": {
            "title": "Home",
            "template": "home.hbs",
            "subDir": false
        },
        "blog": {
            "title": "Blog",
            "description": "You've stumbled across my blog: the home of my most private, innermost thoughts and reflections. And random cat videos.",
            "description": "Welcome to my blog,<br/>I write about many things<br/>Like cat videos.<br/><br/>",
            "template": "blog.hbs",
            "subDir": true,
            "paginate": {
                "pageSize": 10,
                "pagedAttr": "posts"
            },
            "editor": "atom"
        }
    },
    "debug": true,
    "testing": {
        "serverPort": 8000
    }
}
